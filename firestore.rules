rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User profiles
    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId && request.resource.data.role == resource.data.role;
      allow delete: if false;
    }

    // Tasks
    match /tasks/{taskId} {
      allow create: if isSignedIn() && hasRole("MANAGER") && request.resource.data.createdBy == request.auth.uid;
      allow read: if isSignedIn() && (
        (hasRole("MANAGER") && resource.data.createdBy == request.auth.uid) ||
        (hasRole("EMPLOYEE") && resource.data.assignedTo == request.auth.uid)
      );
      allow update: if isSignedIn() && hasRole("MANAGER") && resource.data.createdBy == request.auth.uid && request.resource.data.createdBy == resource.data.createdBy;
      allow delete: if false;
    }

    // Analyses
    match /analyses/{analysisId} {
      allow create: if isSignedIn() && hasRole("EMPLOYEE") && request.resource.data.employeeId == request.auth.uid && request.resource.data.status == "DRAFT";

      // Employees can update only content while DRAFT or NEEDS_CHANGES
      allow update: if isSignedIn() && hasRole("EMPLOYEE") && resource.data.employeeId == request.auth.uid &&
        (resource.data.status == "DRAFT" || resource.data.status == "NEEDS_CHANGES") &&
        request.resource.data.status == resource.data.status &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly([
          "symptoms",
          "signals",
          "hypotheses",
          "readinessScore",
          "updatedAt",
          "revisionCount"
        ]);

      // Managers can read all analyses
      allow read: if isSignedIn() && (hasRole("MANAGER") || resource.data.employeeId == request.auth.uid);

      // Managers can update status + feedback
      allow update: if isSignedIn() && hasRole("MANAGER") && resource.data.status == "SUBMITTED" &&
        (request.resource.data.status == "APPROVED" || request.resource.data.status == "NEEDS_CHANGES") &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly([
          "status",
          "managerFeedback",
          "updatedAt",
          "statusHistory"
        ]);
    }

    // Reports
    match /reports/{reportId} {
      allow create: if isSignedIn() && hasRole("MANAGER") && request.resource.data.createdBy == request.auth.uid;
      allow read: if isSignedIn() && (hasRole("OWNER") || (hasRole("MANAGER") && resource.data.createdBy == request.auth.uid));
      allow update: if false;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function hasRole(role) {
      return request.auth != null && (
        (request.auth.token["role"] != null && request.auth.token["role"] == role) ||
        (getUserRole() == role)
      );
    }
  }
}