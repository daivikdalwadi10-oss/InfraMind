{
  "name": "inframind/backend",
  "description": "InfraMind Backend - Secure PHP-based infrastructure analysis platform",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.2",
    "ext-pdo": "*",
    "ext-json": "*",
    "firebase/php-jwt": "^6.9",
    "vlucas/phpdotenv": "^5.5",
    "monolog/monolog": "^3.5",
    "guzzlehttp/guzzle": "^7.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.8",
    "phpmyadmin/sql-parser": "^6.0",
    "phpmyadmin/motranslator": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "InfraMind\\": "src/"
    },
    "classmap": [
      "src/Models/",
      "src/Validators/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "InfraMind\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8000 -t public",
    "dev": "php -S localhost:8000 -t public",
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage",
    "lint": "phpcs src",
    "lint:fix": "phpcbf src",
    "analyse": "phpstan analyse src",
    "migrate": "php bin/migrate.php",
    "seed": "php bin/seed.php"
  }
}
