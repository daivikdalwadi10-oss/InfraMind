# Application Environment
APP_ENV=development
APP_DEBUG=true
APP_NAME=InfraMind
APP_URL=http://localhost:8000

# Server Port
SERVER_PORT=8000

# Database Configuration
# Supported drivers: mysql, pgsql, sqlite, sqlsrv
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=inframind
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_ENCRYPT=true
DB_TRUST_CERT=true
DB_POOL_MIN=1
DB_POOL_MAX=5

# SQL Server example
# DB_DRIVER=sqlsrv
# DB_HOST=localhost
# DB_PORT=1433
# DB_NAME=InfraMind
# DB_USER=sa
# DB_PASSWORD=YourStrongPassword

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400
JWT_REFRESH_EXPIRATION=604800

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=info
LOG_PATH=./logs

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads

# AI Integration (if using)
GENKIT_API_KEY=
AI_MODEL=gemini-2.5-flash
